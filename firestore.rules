rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Yardımcı Fonksiyonlar ---
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      // Admin kullanıcıların custom claim'lerinde 'admin: true' olduğunu varsayar
      return isSignedIn() && request.auth.token.admin == true;
    }
    
    // --- Genel İçerik Koleksiyonları ---
    match /characters/{characterId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- Abonelikler ---
    // Herkesin abone olmasına izin ver (sadece yeni kayıt oluşturma)
    match /subscribers/{subscriberId} {
      allow create: if true; // Herkese açık yazma erişimi
      allow read, update, delete: if isSignedIn(); // Sadece giriş yapmış kullanıcılar (veya adminler)
    }
    
    match /factions/{factionId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /timeline/{timelineEventId} {
  		allow read: if true;
  		allow write: if isAdmin();
		}
    
    match /lore/{loreEraId} {
    	allow read: if true;
      allow write: if isAdmin();
    }
    
    match /family/{familyId} {
    	allow read: if true;
      allow write: if isAdmin();
    }
    
    // --- Aboneler Koleksiyonu ---
    // Herkesin yeni doküman oluşturmasına izin ver (abonelik formu için),
    // ancak kimsenin okumasına, güncellemesine veya silmesine izin verme.
    match /subscribers/{subscriberId} {
      allow read, update, delete: if false;
      allow create: if true;
    }
    
    // --- Kullanıcı ve Admin Koleksiyonları ---
    match /users/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId; 
    }

    match /chapters/{chapterId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /admin_settings/{document} {
      allow read, write: if isAdmin();
    }
  }
}